@model IEnumerable<Bd2Domain.Model.Review>

@{
    ViewData["Title"] = "Index";
}

<h1>Рецензії</h1>

<p>
    <a asp-action="Create" >Додати рецензію</a>
</p>
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubmissionDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Publication.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reviewer)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubmissionDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Publication.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reviewer.FirstName) @Html.DisplayFor(modelItem => item.Reviewer.LastName)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Редагувати</a> <br />
                        <button class="btn btn-danger mt-2" formaction="@Url.Action("Delete", new { id = item.Id })" formmethod="post">Видалити</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
